<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout">


        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/view2"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Traffic Offense Reporter"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="40dp"
            android:background="@color/light_blue_400"
            android:layout_below="@+id/view2" />

        <TextView
            android:layout_below="@+id/view"
            android:id="@+id/textName"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank No : "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            />

        <EditText
            android:layout_below="@+id/view"
            android:id="@+id/userName"
            android:textSize="18sp"
            android:background="@drawable/button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="rank no" />

        <TextView
            android:layout_below="@+id/textName"
            android:id="@+id/address"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            />

        <EditText
            android:layout_below="@+id/userName"
            android:id="@+id/passwd"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"/>

        <ProgressBar
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/passwd"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/pbar"
            android:scrollbarStyle="insideInset"/>


        <TextView
            android:layout_below="@+id/passwd"
            android:id="@+id/loginError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="54dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />


        <Button
            android:layout_below="@+id/loginError"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="login"
            android:textSize="20sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"/>


        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/login"
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#000"
            android:text="Forgot Password?"


            />
        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/login"
            android:id="@+id/changePasswd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#000"
            android:text=""
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>

</RelativeLayout>
